<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_definisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_bg"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/ll_inside_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFLASI"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary_inflasi"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textSize="15dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:backgroundTint="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/detail_inflasi"
                android:justificationMode="inter_word"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_definisi">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="INFLASI TAHUN 2020"
                    android:padding="3dip"/>

                <TextView
                    android:text="1,90 %"
                    android:gravity="right"
                    android:padding="3dip"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Januari"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,32 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Februari"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,58 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Maret"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,05 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="April"
                    android:padding="3dip"/>

                <TextView
                    android:text="(0,08) %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Mei"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,19 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Juni"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,40 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Juli"
                    android:padding="3dip"/>

                <TextView
                    android:text="(0,20) %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Agustus"
                    android:padding="3dip"/>

                <TextView
                    android:text="(0,12) %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="September"
                    android:padding="3dip"/>

                <TextView
                    android:text="(0,04) %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Oktober"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,07 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="November"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,39 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:text="Desember"
                    android:padding="3dip"/>

                <TextView
                    android:text="0,33 %"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>